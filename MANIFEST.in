# Exclude everything by default
global-exclude *

# Include essential project files
include CITATION.cff
include CONTRIBUTING.md
include CONTRIBUTORS.md
include LICENSE-LGPL-3.0-or-later.txt
include pyproject.toml
include README.md

# Include source code
graft src

# Include tests (useful for conda package)
graft tests

# Exclude test outputs
prune tests/outputs

# Exclude common build artifacts and cache files
global-exclude *.py[cod] __pycache__ *.so
